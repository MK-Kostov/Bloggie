@model List<Bloggie.Web.Models.Domain.Tag>

@{
}

<div class="bg-secondary bg-opacity-10 py-5">
	<div class="container">
		<h1>Show All Tags - Admin Functionality</h1>
	</div>
</div>

<div class="container py-2">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Display Name</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var tag in Model)
				{
					<tr>
						<td>@tag.Id</td>
						<td>@tag.Name</td>
						<td>@tag.DisplayName</td>
						<td>
							<a class="btn btn-primary" asp-area="" asp-controller="AdminTags"
							   asp-action="Edit"
							   asp-route-id="@tag.Id">Edit</a>
						</td>
						<td>
							<form asp-controller="AdminTags" asp-action="Delete" asp-route-id="@tag.Id">
								<button class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">Delete</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No tags found!</p>
	}
</div>

<!--Delete Modal-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				...
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>